<resources>


    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DialogStyle" parent="MyDialog">
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="dialogAnim1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_show1</item>
    </style>


    <!-- Base application theme. 由应用层面引用-->
    <style name="AppTheme" parent="AppTheme.Base"></style>

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <!--将ActionBar隐藏,这里使用ToolBar-->
        <item name="windowActionBar">false</item>
        <!-- 使用 API Level 22以上编译的话，要拿掉前綴字 -->
        <item name="windowNoTitle">true</item>
        <!--colorPrimaryDark对应状态栏的颜色-->
        <item name="colorPrimaryDark">@color/orange2</item>
        <!--colorPrimary 对应ToolBar的颜色-->
        <item name="colorPrimary">@color/color_gray_a3a3a3</item>
        <!--colorAccent 对应EditText编辑时、RadioButton选中、CheckBox等选中时的颜色。-->
        <item name="colorAccent">@android:color/holo_blue_light</item>
        <!--窗口的颜色-->
        <item name="android:windowBackground">@color/white</item>

        <item name="android:windowIsTranslucent">true</item>

    </style>

    <style name="style_textview_one">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

   <!-- 侧滑关闭-->
    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>

</resources>
