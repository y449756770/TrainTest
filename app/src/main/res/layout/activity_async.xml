<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_async"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.incomplete.trainingtest.activity.AsyncActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_async_serial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="AsyncTask串行执行"/>
    <Button
        android:id="@+id/btn_async_parallel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="AsyncTask并行执行"/>

</LinearLayout>
